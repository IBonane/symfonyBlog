{% extends "base.html.twig" %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}

	<h1 class="text-center mt-5">Blog Jstore</h1>

	<div class="row">
		<div class="col-md-8">
			<div class="row">
				{% for article in articles %}
					<div class="card col-md-4 m-5 border-0" style="width: 19rem;">
						<img src="/assets/blog/images/{{article.image}}" class="card-img-top" alt="{{article.image}}">
						<div class="card-body">
							<h5 class="card-title">{{ article.title }}</h5>
							<a href="{{path('show', {'id':article.id})}}" class="btn btn-primary">En savoir plus</a>
						</div>
						<div class="card-footer">
							<p class="">
								Ecrit le
								{{article.createdAt | date("d/m/Y")}}
								Ã 
								{{article.createdAt | date("H:i")}}
								par
								<span class="author">{{article.author}}</span>
							</p>
						</div>
					</div>

				{% endfor %}
			</div>
		</div>

		<div class="col-md-4">
			<h2>Categories</h2>
			<ul class="list-group">
				{% for category in categories %}
					<li class="list-group-item d-flex justify-content-between align-items-center">
						<a class="link text-decoration-none" href="{{path('show_article', {'id':category.id})}}">
							{{category.title}}
						</a>
						<span class="badge bg-primary badge-pill">
							{{category.articles | length}}
							article(s)
						</span>
					</li>
				{% endfor %}
			</ul>

		</div>
	</div>
{% endblock %}
