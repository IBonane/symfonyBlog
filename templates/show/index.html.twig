{% extends "base.html.twig" %}

{% block title %}
	Details de l'article
{% endblock %}

{% block body %}
	<div class="container mt-5 overflow-hidden">
    <h2 class="title mt-3 mb-3 text-info">{{ article.title }}</h2>
		<div class="img-fluid">
			<img src="/assets/blog/images/{{article.image}}" alt="{{article.image}}">
		</div>

		<div class="content">
			<p class="mt-3">
				Ecrit le
				{{article.createdAt | date("d/m/Y")}}
				Ã 
				{{article.createdAt | date("H:i")}}
				par <span class="author">{{article.author}}</span>
			</p>
            <h3 class="title mt-3 mb-3">{{ article.title }}</h3>
			<p class="content" style="text-align:justify">
				{{article.content | raw}}
			</p> 
		</div>
	</div>
{% endblock %}
